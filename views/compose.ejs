<%- include("partials/header");-%>

<h1>Compose</h1>
<form action="/compose" method="post">

  <div class="form-horizontal">
      <div class="form-group">
          <div class="col-lg-12">
            <h4>Title</h4>
              <input class="form-control" type="text" name="newTitle">
              <h4>Post</h4>
              <textarea class="form-control" rows="3" name="newBody" placeholder="" required></textarea>
          </div>
      </div>
  </div>

  <button type="submit" class="btn btn-primary" name="button">Publish</button>

</form>

